<p style="color: green"><%= notice %></p>
<%= link_to('Back to Homepage', {controller: 'main', action: 'index'}) %><br />

<div class="books index">
  <h2>Books</h2>

  <%= link_to("Add New book", new_book_path, class: 'action new') %><br />

  <table class="listing" summary="book list" style="border: 1px solid black;">
    <tr class="header">
      <th style="width: 20%;">Title</th>
      <th style="width: 20%;">Author</th>
      <th style="width: 20%;">Price</th>
      <th style="width: 20%;">Date Published</th>
      <th>Actions</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= book.publish_date %></td>
      <td class="actions">
        <%= link_to("Show", book_path(book), class: 'action show') %>
        <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
        <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
